#!/bin/bash
# Stop AeroSpace, SketchyBar, and Borders

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/makaron-ui-helpers"

echo "ðŸ›‘ Stopping Makaron UI components..."
echo ""

stop_aerospace
stop_sketchybar
stop_borders
restore_macos_defaults
save_ui_mode "stop"

echo ""
echo "âœ… UI components stopped. Use 'makaron-ui-full' or 'makaron-ui-minimal' to re-enable."
